@model LoginViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background-color:lightgrey;
    }
</style>
<br />
<br />
<div class="container" style="border-radius: 10px; background-color:white">
    <div class="content">        
        <!--FORMULÁRIO DE CADASTRO-->
        <div id="cadastro">
            <form method="post" action="CadastraLogin">
                <br />
                <h1>Cadastro</h1>
               <div class="form-group">
                    <p>
                        <label for="id">Seu Id</label>
                        <input readonly class="form-control" id="id" name="id" required="required" type="text" value="@Model.Id"/>
                    </p>
                </div>
                <div class="form-group">
                     <p>
                         <label for="usuario">Seu User</label>
                         <input class="form-control" id="usuario" name="usuario" required="required" type="text"/>
                     </p>
                </div>
                <div class="form-group">
                    <p>
                        <label for="senha">Sua senha</label>
                        <input class="form-control"  id="senha" name="senha" required="required" type="password" />
                    </p>
                </div>
                <div class="form-group">
                    <p>
                        <input class="btn btn-outline-primary" type="submit" value="Cadastrar" />
                    </p>
                </div>
                <br />
                <p class="link">
                    Já tem conta?
                    <a asp-controller="Login" asp-action="Index" type="button" class="btn btn-outline-primary">Login</a>
                <br />
                <br />
                </p>
            </form>
        </div>
    </div>
</div> 
