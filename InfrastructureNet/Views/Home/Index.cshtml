@{
    ViewData["Title"] = "Home Page";
}
<link rel="stylesheet" href="~/css/home.css"/>

<div class="header">
	<a href="#default" class="logo">Pirelli</a>
	<div class="header-right">
		<a asp-controller="Home" asp-action="Suport" type="button" class="btn btn-outline-primary">Suporte</a>
		<a asp-controller="Login" asp-action="LogOff" type="button" class="btn btn-outline-primary">Sair</a>
	</div>
</div>

<br />
<br />

@if(ViewBag.ADM == true || ViewBag.master == true || ViewBag.logado == true)
{
<div>
<section class="grid">
	<div class="item">
		@if (ViewBag.ADM == true || ViewBag.master == true || ViewBag.logado == true)
		{
			<div class="mainContainer">
				<h2>Área direcionada para usuários logados++!</h2>
			</div>
		}
	</div>
	<div class="item">
		@if (ViewBag.ADM == true || ViewBag.master == true)
		{
			<div class="mainContainer">
				<h2>Área direcionada para usuários ADM++!</h2>
			</div>
		}
	</div>
	<div class="item">
		@if (ViewBag.master == true)
		{
			<div class="mainContainer">
				<a asp-controller="Login" asp-action="LogOff" type="button" class="btn btn-outline-success">Autenticação</a>
				<br />
				Área de autenticação de usuários ADM
			</div>
		}
	</div>
</section>
</div>
}
else
{
    <li><a asp-area="" asp-controller="Login" asp-action="Index">Login</a></li>
}
